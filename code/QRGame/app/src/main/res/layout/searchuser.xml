<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/searchuser_searchresult"
        android:layout_width="148dp"
        android:layout_height="45dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="13dp"
        android:gravity="center_vertical|left"
        android:text="Search Result:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchuser" />

    <EditText
        android:id="@+id/searchuser"
        android:layout_width="353dp"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchuser_enter" />

    <TextView
        android:id="@+id/searchuser_enter"
        android:layout_width="174dp"
        android:layout_height="44dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="38dp"
        android:gravity="center_vertical|left"
        android:text="Enter Username:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/searchuser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/searchuser_username"
        android:layout_width="354dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:gravity="center_vertical|left"
        android:text="Username:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchuser_searchresult" />

    <TextView
        android:id="@+id/searchuser_totalscore"
        android:layout_width="354dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="34dp"
        android:gravity="center_vertical|left"
        android:text="Total Score:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchuser_username" />

    <TextView
        android:id="@+id/searchuser_totalamount"
        android:layout_width="354dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="34dp"
        android:gravity="center_vertical|left"

        android:text="Total Amount:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchuser_totalscore" />

    <Button
        android:id="@+id/searchuser_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="91dp"
        android:text="Return"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchuser_totalamount" />

    <Button
        android:id="@+id/searchuser_viewdetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="16dp"
        android:text="View Detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchuser_totalamount" />

    <Button
        android:id="@+id/searchuser_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="91dp"
        android:text="Search"
        app:layout_constraintStart_toEndOf="@+id/searchuser_return"
        app:layout_constraintTop_toBottomOf="@+id/searchuser_totalamount" />

</androidx.constraintlayout.widget.ConstraintLayout>