<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/searchqr_searchqr"
        android:layout_width="353dp"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="center_vertical|left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="174dp"
        android:layout_height="44dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="38dp"
        android:text="Enter QR Code:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/searchqr_searchqr"
        android:gravity="center_vertical|left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/searchqr_searchresult"
        android:layout_width="148dp"
        android:layout_height="45dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="13dp"
        android:text="Search Result:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_vertical|left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchqr_searchqr" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="354dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:text="QR Code Name:"
        android:textSize="20sp"
        android:gravity="center_vertical|left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchqr_searchresult" />

    <TextView
        android:id="@+id/searchqr_qroutput"
        android:layout_width="354dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:gravity="center_vertical|left"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/searchqr_amount"
        android:layout_width="334dp"
        android:layout_height="49dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:text="Total Amount Scanned:"
        android:textSize="20sp"
        android:gravity="center_vertical|left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchqr_qroutput" />

    <Button
        android:id="@+id/searchqr_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="91dp"
        android:text="Return"
        android:gravity="center_vertical|left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchqr_amount" />

    <Button
        android:id="@+id/searchqr_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="91dp"
        android:text="Search"
        android:gravity="center_vertical|left"
        app:layout_constraintStart_toEndOf="@+id/searchqr_return"
        app:layout_constraintTop_toBottomOf="@+id/searchqr_amount" />

    <Button
        android:id="@+id/searchqr_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="16dp"
        android:text="View Detail"
        android:gravity="center_vertical|left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchqr_amount" />
</androidx.constraintlayout.widget.ConstraintLayout>